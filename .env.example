# ===========================================
# SPARK SPACE - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
SERVER_PORT=3001
PING_MESSAGE=Spark Space API is running

# ===========================================
# OPENAI CONFIGURATION
# ===========================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Server-side (admin operations)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Client-side (public operations) - These are prefixed with VITE_ for Vite
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_public_key_here

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Docker Hub username for pushing images
DOCKER_USER=your_dockerhub_username_here

# Auto-build configuration
AUTO_BUILD=false

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Set to true for development mode
DEBUG=true

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================
# Add any other environment variables your application needs
# Example:
# DATABASE_URL=your_database_url_here
# REDIS_URL=your_redis_url_here
